<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robot.activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/mar_50"/>


    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_49"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/rb_homepage"
            style="@style/activity_main_radiobutton"
            android:text="主页"
            android:drawableTop="@drawable/selector_home"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_store"
            style="@style/activity_main_radiobutton"
            android:drawableTop="@drawable/selector_store"
            android:text="商城"/>

        <RadioButton
            android:id="@+id/rb_task_hall"
            style="@style/activity_main_radiobutton"
            android:drawableTop="@drawable/selector_need"
            android:text="任务大厅"/>

        <RadioButton
            android:id="@+id/rb_center"
            style="@style/activity_main_radiobutton"
            android:drawableTop="@drawable/selector_center"
            android:text="个人中心"/>

    </RadioGroup>

</RelativeLayout>
