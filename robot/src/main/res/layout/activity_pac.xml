<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <include layout="@layout/toobars"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_500"
                android:layout_marginTop="@dimen/mar_20"
                android:layout_marginLeft="@dimen/mar_20"
                android:layout_marginRight="@dimen/mar_20"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传身份证"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/mar_20"
                    android:textSize="@dimen/txt_16"
                    android:textColor="@color/txt3"/>

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mar_150"
                    android:layout_below="@+id/txt1"
                    android:layout_marginLeft="@dimen/mar_40"
                    android:layout_marginRight="@dimen/mar_40"
                    android:layout_marginTop="@dimen/mar_20"
                    android:background="@color/pacbg">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add"
                        android:layout_centerInParent="true" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mar_150"
                    android:layout_below="@+id/rl_one"
                    android:layout_marginLeft="@dimen/mar_40"
                    android:layout_marginRight="@dimen/mar_40"
                    android:layout_marginTop="@dimen/mar_20"
                    android:background="@color/pacbg">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="@dimen/mar_180"
                    android:layout_height="@dimen/mar_40"
                    android:background="@color/main_text_check"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rl_two"
                    android:layout_marginTop="@dimen/mar_35"
                    android:gravity="center"
                    android:text="立即认证"
                    android:textSize="@dimen/txt_16"
                    android:textColor="@color/bg"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>